@inject Localizer Localizer
@using Microsoft.FluentUI.AspNetCore.Components
<nav>
    <ul style="list-style:none; padding:0; margin:0;">
        <li style="margin-bottom:8px;">
            <NavLink href="/" class="fluent-nav-link" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true">
                    @Localizer.Get(LanguageKey.Home)
                </span>
            </NavLink>
        </li>
        <li>
            <NavLink href="/client-apps" class="fluent-nav-link">
                <span class="bi bi-app-indicator-nav-menu" aria-hidden="true" style="margin-right: 8px; color: #333;">
                    @Localizer.Get(LanguageKey.ClientApp)@Localizer.Get(LanguageKey.Management)


                </span> 
            </NavLink>
        </li>
    </ul>
</nav>

