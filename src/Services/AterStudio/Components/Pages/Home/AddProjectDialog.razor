@namespace AterStudio.Components
@implements IDialogContentComponent<AddProjectDto>

<FluentEditForm Model="Content">
    <FluentDialogHeader ShowDismiss="false">
        <FluentLabel Typo="Typography.PaneHeader">
            添加解决方案
        </FluentLabel>
    </FluentDialogHeader>
    <FluentBodyContent>
        <FluentLabel Typo="Typography.Subject">
            仅支持.NET或Node类型项目
        </FluentLabel>
        <FluentStack Orientation="Orientation.Vertical" VerticalGap="16">
            <FluentStack VerticalGap="1" Orientation="Orientation.Vertical">
                <FluentTextField @bind-Value="Content.ProjectName" Label="项目名称" Required="true" Placeholder="显示名称" Style="width: 100%" />
            </FluentStack>
            <FluentStack VerticalGap="1" Orientation="Orientation.Vertical">
                <FluentTextField @bind-Value="Content.ProjectDirectory" Label="项目目录" Required="true" Placeholder="项目根目录路径，非文件路径" Style="width: 100%" />
            </FluentStack>
        </FluentStack>
    </FluentBodyContent>
    <FluentDialogFooter>
        <FluentButton Appearance="Appearance.Accent"
                      Type="ButtonType.Button">
            保存
        </FluentButton>
        <FluentButton Appearance="Appearance.Neutral">
            取消
        </FluentButton>
    </FluentDialogFooter>
</FluentEditForm>

@code {
    [Parameter] public AddProjectDto Content { get; set; } = null!;
}
