@using AterStudio.Components.Layout
@inherits LayoutComponentBase
@layout MainLayout
@inject Localizer Localizer

<FluentStack Orientation="Orientation.Horizontal" Width="100%">
    <div class="col-auto" style="background: var(--neutral-layer-2);height:calc(100vh - 56px)">
        <FluentNavMenu Expanded="true" Width="220">
            <FluentNavGroup Icon="@(new Icons.Regular.Size24.Table())" @bind-Expanded="Expanded">
                <TitleTemplate>
                    <FluentLabel Typo="Typography.PaneHeader">@Localizer.Workbench</FluentLabel>
                </TitleTemplate>
                <ChildContent>
                    <FluentNavLink Icon="@(new Icons.Regular.Size24.BoxMultiple())">
                        @Localizer.Get(Localizer.Entity)@Localizer.Get(Localizer.Manage)
                    </FluentNavLink>

                    <FluentNavLink Icon="@(new Icons.Regular.Size24.PlugConnected())">
                        @Localizer.Get(Localizer.OpenAPI)
                    </FluentNavLink>

                    <FluentNavLink Icon="@(new Icons.Regular.Size24.AppsAddIn())">
                        @Localizer.Get(Localizer.Modules)@Localizer.Get(Localizer.Manage)
                    </FluentNavLink>
                </ChildContent>
            </FluentNavGroup>

        </FluentNavMenu>
    </div>
    <div class="col">
        @Body
    </div>
</FluentStack>

@code {
    private bool Expanded = true;
}
