@implements IDialogContentComponent

@using IdentityServer.Managers
<FluentDialogHeader ShowDismiss="true">
    <FluentStack VerticalAlignment="VerticalAlignment.Center">
    </FluentStack>
</FluentDialogHeader>

@* Footer *@
<FluentDialogFooter>
    <FluentButton Appearance="Appearance.Accent" OnClick="@SaveAsync">Save</FluentButton>
    <FluentButton Appearance="Appearance.Neutral" OnClick="@CancelAsync">Cancel</FluentButton>
</FluentDialogFooter>

@* Body *@
<FluentDialogBody>
    <FluentTextField @bind-Value="AddDto.ClientId" Placeholder="ClientId" />
    <FluentTextField @bind-Value="AddDto.DisplayName" Placeholder="显示名称" />
    <FluentTextField @bind-Value="RdirectUris" Placeholder="重定向URI，多个url以;相隔" />
</FluentDialogBody>


@code {

    public ClientAppDto AddDto { get; set; } = default!;

    public string RdirectUris { get; set; } = string.Empty;

    [CascadingParameter]
    public FluentDialog Dialog { get; set; } = default!;

    private async Task SaveAsync()
    {
        if (!string.IsNullOrEmpty(RdirectUris))
        {
            AddDto.RedirectUris = RdirectUris.Split(new[] { ';' }, StringSplitOptions.RemoveEmptyEntries).ToList();
        }

        await Dialog.CloseAsync();
    }

    private async Task CancelAsync()
    {
        await Dialog.CancelAsync();
    }

}
