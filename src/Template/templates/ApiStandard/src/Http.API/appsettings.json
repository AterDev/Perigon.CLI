{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Authentication": {
    "Jwt": {
      "ValidAudiences": "MyProjectName.AllFreedomPeople.Default",
      "ValidIssuer": "MyProjectName.HumanFreedom.Default",
      "Sign": "MyProjectName.FightForFreedomForever.Justice",
      // 过期时间:小时
      "Expired": 24
    }
  },
  "ConnectionStrings": {
    // 可写数据库
    "CommandDb": "Server=localhost;Port=5432;Database=MyProjectName;User Id=postgres;Password=MyProjectName_DevSecret;",
    // 只读数据库
    "QueryDb": "Server=localhost;Port=5432;Database=MyProjectName;User Id=postgres;Password=MyProjectName_DevSecret;",
    // 缓存连接
    "Cache": "localhost:16379",
    // 缓存前缀
    "CacheInstanceName": "Dev"
  },
  "LoginSecurityPolicy": {
    "PasswordLevel": 0,
    "IsNeedVerifyCode": false,
    "PasswordExpired": 12,
    "LoginRetry": 5,
    "SessionLevel": 0,
    "IsEnable": false
  },

  "Components": {
    // Memory/Redis
    "Cache": "Memory",
    "Database": "PostgreSQL"
  },
  // 邮件发送服务
  "Smtp": {
    // smtp服务地址
    "Host": "",
    "Port": 25,
    // 发件人名称
    "DisplayName": "",
    // 发件人地址
    "From": "",
    // 验证用户名
    "Username": "",
    // 验证密码
    "Password": "",
    "EnableSsl": true
  },
  "Key": {
    // 默认用户密码
    "DefaultPassword": "Hello.Net"
  },
  "AllowedHosts": "*",
  // 版本格式:yyMMdd.编号
  "Version": 241001.01,
  // otel相关配置
  "OTEL_RESOURCE_ATTRIBUTES": "service.name=MyProjectName,service.instance.id=Production",
  "OTEL_EXPORTER_OTLP_ENDPOINT": "http://localhost:4317",
  "OTEL_EXPORTER_OTLP_HEADERS": "x-otlp-api-key=your-api-key"
}
